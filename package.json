{
  "name": "world-sweeper",
  "version": "1.0.0",
  "main": "",
  "repository": "https://github.com/Gabe-Lee/World-Sweeper",
  "author": "Gabriel Anderson",
  "license": "MIT",
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "extends": [
      "airbnb",
      "plugin:@typescript-eslint/recommended",
      "airbnb/hooks",
      "plugin:react/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "import/extensions": [
        "error",
        "never"
      ],
      "react/jsx-filename-extension": [
        2,
        {
          "extensions": [
            ".jsx",
            ".tsx"
          ]
        }
      ],
      "import/no-extraneous-dependencies": [
        2,
        {
          "devDependencies": [
            "**/test.tsx",
            "**/test.ts"
          ]
        }
      ],
      "@typescript-eslint/indent": [
        2,
        2
      ],
      "no-bitwise": "off",
      "no-param-reassign": "off",
      "lines-between-class-members": "off",
      "no-unused-expressions": "off",
      "no-underscore-dangle": "off",
      "react/prop-types": "off",
      "react/jsx-props-no-spreading": "off",
      "no-nested-ternary": "off"
    },
    "ignorePatterns": [
      "dist/**/*",
      "node_modules/**/*",
      "webpack.client.js",
      "webpack.server.js"
    ],
    "settings": {
      "react": {
        "version": "detect"
      },
      "import/parsers": {
        "@typescript-eslint/parser": [
          ".ts",
          ".tsx"
        ]
      },
      "import/resolver": {
        "typescript": {}
      }
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-optional-chaining"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testRegex": "^.+\\.(test|spec)\\.jsx?$",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "scripts": {
    "test": "jest --runInBand",
    "watch": "run-p watch:*",
    "watch:watch-tests": "jest --runInBand --watch",
    "watch:build-client": "webpack --config webpack.client.js -d --watch",
    "watch:build-server": "webpack --config webpack.server.js -d --watch",
    "watch:start-server": "nodemon dist/server.js --delay 1000ms",
    "watch:start-client": "live-server --open=/ --watch=/dist --wait=2000 --proxy=/:http://127.0.0.1:3333",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "start": "webpack --config webpack.config.js -d && node ./dist/server/server.js & live-server --open=/ --watch=dist --wait=1000 --proxy=/:http://127.0.0.1:3333",
    "build": "webpack --config webpack.config.js -p && node ./dist/server/server.js & live-server --open=/ --watch=dist --wait=1000 --proxy=/:http://127.0.0.1:3333"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.27",
    "@fortawesome/free-solid-svg-icons": "^5.12.1",
    "@fortawesome/react-fontawesome": "^0.1.8",
    "axios": "^0.19.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "lodash": "^4.17.15",
    "pixi.js": "^5.2.1",
    "random-js": "^2.1.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-jss": "^10.0.4",
    "react-redux": "^7.1.3",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@types/axios": "^0.14.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/jest": "^25.1.2",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.7.0",
    "@types/pixi.js": "^5.0.0",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/react-jss": "^10.0.0",
    "@types/react-redux": "^7.1.7",
    "@types/redux": "^3.6.0",
    "@types/redux-thunk": "^2.1.0",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "babel-loader": "^8.0.6",
    "copy-webpack-plugin": "^5.1.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-json": "^2.1.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "fancy-log": "^1.3.3",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^25.1.0",
    "live-server": "^1.2.1",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "typescript": "^3.8.2",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2",
    "yarn": "^1.22.0"
  }
}
